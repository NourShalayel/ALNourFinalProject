<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagerCategoryFragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The total number of Categories is :"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/countCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/downloadCat_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Category File"
            android:textSize="18dp"
            android:backgroundTint="@color/colortrans"
            android:textStyle="bold"/>

    </LinearLayout>
</FrameLayout>

